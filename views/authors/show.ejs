<h2>All about <%= author.name %></h2>

<div class="row">
	<div class="col-6">
		<img src="<%=author.image%>">
	</div>
	<div class="col-6">
		<h3><%=author.name%>'s Bio</h3>
		<p><%=author.bio%></p>
	</div>
</div>

<div class="row">
	<div class="col-12">
		<h3>Articles By <%=author.name%></h3>
		<% author.articles.forEach(function(article){%>
			<div>
				<hr>
				<a href="/article/<%= article.id %>"><%=article.title%></a>
				<!-- <form method="DELETE" action="/articles">
					<input type="submit" name="" class="btn btn-danger">
				</form> -->
			</div>
		<%});%>
	</div>
</div>